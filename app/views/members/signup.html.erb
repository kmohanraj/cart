<h1>Sign Up</h1>
<% form_for :member do |f| %>
 <% if @member.errors.any? %>
  <div class="error_messages">
  	<h2>Form is invalid</h2>
  	<ul>
  		<% for message in @member.errors.full_messages %>
  			<li><%= message %></li>
  		<% end %>
  	</ul>
  </div>
 <% end %>
<p>
	<%= f.label :email %>
	<%= f.text_field :email, :size => 20 %><br>
</p>
<p>
	<%= f.label :password %><br>
	<%= f.password_field :password, :size => 20 %><br>
</p>
<p>
	<%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation, :size => 20 %><br>
</p>
<%= f.submit "Sign Up" %><br>
<label for="Login Page!" id="All ready signup!"class="New_user_link">
      <%= link_to ('Login Page!'),:controller => "pages",:action => "home" %>
</label>
<% end %>


